
<form action="/songs" method="post">

  <label for="Song Name">Name</label>
  <input type="text" name="song[name]" id="Song Name">
  <br>
  <label for="Artist Name">Artist Name</label>
  <input type="text" id="Artist Name" name="artist[name]" >
  <br>
  <p> Choose Genre: </p>
  <% @genres.each do |genre| %>
  <br>
  <input
    type="checkbox"
    id="<%= genre.name %>"
    name="genres[]"
    value=<%= genre.id %>>
      <br>
  <label
    for="<%= genre.name %>">
      <%= genre.name %>
      <br>
  </label>
  <% end %>
  <br>
  <input id="Create" type="submit">

</form>
