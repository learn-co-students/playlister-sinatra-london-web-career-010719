
<form action="/songs/<%=@song.slug%>" method="post">
<input type="hidden" name="_method" value="patch" />
  <label for="Song Name">Name</label>
  <input type="text" name="song[name]" id="Song Name" value="<%= @song.name %>"/>
  <br>
  <label for="Artist Name">Artist Name</label>
  <input type="text" id="Artist Name" name="artist[name]" value="<%= @song.artist.name %>" />
  <br>
  <p> Choose Genre: </p>
  <% @genres.each do |genre| %>
  <br>
  <input
    type="checkbox"
    id="<%= genre.name %>"
    name="genres[]"
    value=<%= genre.id %>
    <% if @song.genres.include?(genre) %>
    checked
    <% end %>>
      <br>
  <label
    for="<%= genre.name %>">
      <%= genre.name %>
      <br>
  </label>
  <% end %>
  <br>
  <input id="Save" type="submit">

</form>
