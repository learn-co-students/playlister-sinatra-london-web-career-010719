
<form action="/songs/<%=@song.slug%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  please edit song name
  <input type="text" name="song[name]" value="<%=@song.name%>" id="Name">
  <br>

  please edit artist
  <input type="text" name="artist[name]" value="<%=@song.artist.name%>" id="Artist Name">
  <br>

  select from exisitng genres
  <br>
  <%@genres.each do |genre|%>
  <input type="checkbox" name="song[genre_ids][]" value="<%=genre.id%>" id="<%=genre.name%>"> <%=genre.name%>
  <%if @song.genre_ids.include?(genre.id)%>
  checked
  <%end%>
  </input>
  <br>
  <%end%>

  <br>
  <input type="submit" name="submit" value="Save">

</form>
